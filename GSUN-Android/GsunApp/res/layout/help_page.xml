<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Help Page"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="6dp"
        android:text="Click Find A Shop, You will get a prompt to enter your need"
        android:textColor="#00FF00" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="6dp"
        android:text="Enter your need, set the range as you prefer. Click Find button at the bottom"
        android:textColor="#00FF00" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="6dp"
        android:text="Result page will display results for your search. Swap to see suggestions for your need"
        android:textColor="#00FF00" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="6dp"
        android:text="By clicking on a Shop you can get full details about a shop"
        android:textColor="#00FF00" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="6dp"
        android:text="Click contacts, email to send emails. Click contacts, phone number to call that shop."
        android:textColor="#00FF00" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="6dp"
        android:text="Map will show you how you can reach that shop very easily"
        android:textColor="#00FF00" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.68"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/buttonGoBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back" />

</LinearLayout>